<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/toolbar_background_two"
    android:fitsSystemWindows="true"
    android:gravity="center"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay"

    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_open_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_drawer"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/img_notifications"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="10dp"

            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_open_drawer"
            android:layout_toLeftOf="@+id/img_open_drawer"
            android:layout_toRightOf="@+id/img_open_drawer"
            android:padding="6dp"
            android:src="@drawable/ic_notifications"
            android:tint="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible" />
    </RelativeLayout>


</android.support.v7.widget.Toolbar>