<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:clipChildren="false"
    android:layout_marginTop="10dp"
    android:clipToPadding="false"
    android:divider="@color/white"
    android:dividerHeight="0dp"
    android:elevation="8dp"
    android:layoutDirection="rtl"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_details_notifications_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="19-8-2018"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/image_details_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/rate_bar"
                    android:visibility="visible" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="القاهرة " />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/white">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="57dp"
                        android:layout_height="53dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:srcCompat="@drawable/ic_avater" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="محمد ابراهيم "
                        card_view:layout_constraintBottom_toBottomOf="@+id/imageView"
                        card_view:layout_constraintEnd_toStartOf="@+id/imageView"
                        card_view:layout_constraintTop_toTopOf="@+id/imageView" />


                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:weightSum="2">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="بري" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="نوع الرحلة   :"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="01515544" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginEnd="5dp"
                        android:text="رقم الجوال  :"
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/grey_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text= "ل  مب ؤ ؤ ؤي للاؤلا ؤلايء يلايلايلاي يلايلايلايييبلبيليليبلبيلبيلبيلبلءرءؤرءرءؤرؤءرءؤ رءؤرءؤر    ءؤرءرؤءؤرءرةرمن ءةءرلاءلاوءز"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ملاحظات :"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:padding="8dp"
                android:textColor="@color/white"
                android:text="اتصل"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_call"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_call" />
            <Button
                android:background="@color/blue"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="محادثة"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_call_2"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ic_call_2" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>